generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  email       String        @unique
  firstName   String?
  lastName    String?
  location    String?
  phone       String?
  image       String?
  linkedin    String?
  github      String?
  joinedAt    DateTime      @default(now())
  createdJobs JobReferral[]
}



model JobReferral {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  referrerEmail       String?
  referrerPhoneNumber String?
  organization        String
  description         String
  designation         String
  tech_tag            String[]
  experience          Int[]
  salary              Int[]
  jobUrl              String?
  createdBy           User      @relation(fields: [createdById], references: [id])
  createdById         String    @db.ObjectId
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  relatedImg          String[]
}
